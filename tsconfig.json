{
  "compilerOptions": {
    "outDir":"./lib",
    "declarationDir": "./lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true,
    "downlevelIteration": true,
    "newLine": "lf",
    "jsx": "react",
    "lib": [
      "es2015",
      "es7",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ]
  },
  "include": ["./src"],
  "exclude": ["dist"]
}
